N1 = conv([1,-1],[1,2]);
N2 = conv(Q,[1,3]);
[r,s,k]=residue(P,N2); r',s',k';


F = [1]; % 2
N1 = conv([1,-2],[1,-2]);
N2 = conv([1,-3],[1,-4]);
N3 = conv(N1,N2);
[r,s,k]=residue(F,N3); r',s',k';


F = [1, 3]; % 3
N = conv([1,-1],[1,0,1]);
[r,s,k]=residue(F,N); r',s',k';

F = [1, 0, 0]; % 4
[r,s,k]=residue(F,[1,0,0,0,-1]); r',s',k';

№7
P = [1,-6,15,-14];  
t = roots(P);
disp('корни 1 полинома:');
disp(t);
m = 1 + 15/abs(max(t));
x = linspace(-m, m, 100);
grid on;
plot(x,polyval(P,x)); 

P = [1,-2,-8,13,-24];  
t = roots(P);
disp('корни 2 полинома:');
disp(t);
m = 1 + 15/abs(max(t));
x = linspace(-m, m, 100);
plot(x,polyval(P,x)); 
grid on;




