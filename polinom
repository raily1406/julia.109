№3
F = [1,-2,6,-10,16]; 
x = [1, -4];
[q1,r1] = deconv(F,x);
[q2,r2] = deconv(q1,x);
disp(r1);
disp(r2);
f = polyder(F);
disp(polyval(F,4));
disp(polyval(f,4));

F =[1,1+2i,-1-3i,0,7];
x =[1,2+1i];
[q3,r3] = deconv(F,x);
[q4,r4] = deconv(q3,x);
disp(r3);
disp(r4);
f = polyder(F);
disp(polyval(F,-2-1i));
disp(polyval(f,-2-1i));
 
F=[1,-4,6,-8,10];
x= [1,-2];
[q5,r5] = deconv(F,x);
[q6,r6] = deconv(q5,x);
disp(r5);
disp(r6);
f = polyder(F);
disp(polyval(F,2));
disp(polyval(f,2));
 
F=[1,-3,-4,5i,-1];
x =[1,-1-2i];
[q7,r7] = deconv(F,x);
[q8,r8] = deconv(q7,x);
disp(r7);
disp(r8);
f = polyder(F);
disp(polyval(F,1+2i));
disp(polyval(f,1+2i));

